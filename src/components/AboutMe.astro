---
import { Icon } from "astro-icon/components";
---

<section class="min-h-screen bg-[#c07bc0]">
  <div class="polaroid-outer pt-5">
    <div class="polaroid-inner justify-self-center">
      <img src="/profile-pic.jpg" alt="Profile Picture" />
    </div>
    <p
      class="justify-self-center retro-font mt-6 border-b-4 border-dashed border-black"
    >
      Emmanuela Zhupa
    </p>
  </div>
  <div class="flex social-buttons">
    <a href="https://github.com/erelaa" class="social-btn mr-5" target="_blank">
      <Icon name="github" size={100} />
    </a>
    <a
      href="https://www.linkedin.com/in/emmanuela-zhupa-3ab688210/"
      class="social-btn mr-5"
      target="_blank"
    >
      <Icon name="linkedin" size={100} />
    </a>
    <a href="mailto:em.zhupa@gmail.com" class="social-btn mr-5" target="_blank">
      <Icon name="mail" size={100} />
    </a>
    <a href="tel:+4915788644558" class="social-btn" target="_blank">
      <Icon name="phone" size={100} />
    </a>
  </div>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap");
    #background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }
    .polaroid-outer {
      background-color: rgb(255, 255, 255);
      width: 350px;
      height: 420px;
    }

    .polaroid-inner {
      width: 300px;
      height: 300px;
    }

    .retro-font {
      font-family: "Press Start 2P", serif;
    }

    .social-btn {
      width: 100px;
      height: 100px;
      background-color: #f54bae;
      align-items: center;
      justify-content: center;
      clip-path: polygon(
        30% 0%,
        70% 0%,
        100% 30%,
        100% 70%,
        70% 100%,
        30% 100%,
        0% 70%,
        0% 30%
      );
    }
  </style>
</section>
