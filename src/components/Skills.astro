<section class="min-h-screen snap-start">
  <div class="title retro-font text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-[#ff9ef0] pt-16 text-center">
    SKILLS & TOOLS
  </div>

  <div class="mt-8 grid place-items-center">
    <section
      class="relative bg-[#09161D] shadow-[0_5px_35px_rgb(9,22,29)]
        w-full max-w-[1000px] min-h-[500px]
        grid grid-cols-4 xs:grid-cols-2 sm:grid-cols-4 md:grid-cols-4 lg:grid-cols-6
        gap-4 p-4 md:p-8
        rounded-[15px]
        justify-items-center"
    >
      <div class="retro-font text-2xl text-[#ff9ef0] col-span-full text-center">
        My Deck
      </div>
      <button class="custom-button active">JS/TS</button>
      <button class="custom-button">CSS/SCSS</button>
      <button class="custom-button">HTML</button>
      <button class="custom-button">PHP</button>
      <button class="custom-button">Java</button>
      <button class="custom-button">C</button>
      <button class="custom-button">C#</button>
      <button class="custom-button">Python</button>
      <button class="custom-button">SQL</button>
      <button class="custom-button">Tailwind CSS</button>
      <button class="custom-button">React</button>
      <button class="custom-button">Vue.js</button>
      <button class="custom-button">Blazor</button>
      <button class="custom-button">Django</button>
      <button class="custom-button">Bootstrap</button>
      <button class="custom-button">Laravel</button>
      <button class="custom-button">Next.js</button>
      <button class="custom-button">Docker</button>
      <button class="custom-button">GitHub</button>
      <button class="custom-button">Postman</button>
      <button class="custom-button">Figma</button>
      <button class="custom-button">Azure</button>
      <button class="custom-button">Typo3</button>
      <button class="custom-button">Wordpress</button>
    </section>
  </div>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap");

    .retro-font {
      font-family: "Press Start 2P", serif;
    }

    .title {
      text-shadow: 0.08em 0.08em #111fe4;
    }

    .custom-button {
      @apply cursor-pointer bg-[#955597] rounded-[15px] border-none 
             transition-all duration-200 
             w-20 h-20 
             md:w-24 md:h-24 
             lg:w-28 lg:h-28
             shadow-[1px_1px_0px_#424,1px_2px_0px_#424,1px_3px_0px_#424,1px_4px_0px_#424,1px_5px_0px_#424,1px_6px_0px_#424,1px_7px_0px_#424];
      font-size: 0.5rem;
      font-family: "Press Start 2P", serif;
    }

    @media (min-width: 1024px) {
      .custom-button {
        font-size: 0.7rem;
      }
    }

    .custom-button.active {
      @apply bg-[#e2aee2] shadow-none relative top-[2.5px];
    }
  </style>

  <script is:inline>
    const buttons = Array.from(
      document.querySelectorAll("button.custom-button")
    );
    buttons.forEach((button) => {
      button.addEventListener("click", (e) => {
        buttons.forEach((btn) => {
          if (
            btn.innerText === e.target.innerText &&
            !btn.classList.contains("active")
          ) {
            btn.classList.add("active");
          } else {
            btn.classList.remove("active");
          }
        });
      });
    });
  </script>
</section>
